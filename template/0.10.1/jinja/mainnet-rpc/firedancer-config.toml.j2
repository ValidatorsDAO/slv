[hugetlbfs]
    mount_path = "/mnt"
    max_page_size = "huge"

[layout]
     affinity = "auto"
     agave_affinity = "auto"
     verify_tile_count = 1
     bank_tile_count = 1

[tiles.gui]
    enabled = true
    gui_listen_port = 6001
    gui_listen_address = "0.0.0.0"

[tiles.metric]
    prometheus_listen_address = "0.0.0.0"
    prometheus_listen_port = 7999

