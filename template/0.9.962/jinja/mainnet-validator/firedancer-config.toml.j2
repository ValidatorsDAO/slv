    ]

[hugetlbfs]
    mount_path = "/mnt"
    max_page_size = "gigantic"

[layout]
     affinity = "auto"
     agave_affinity = "auto"

[tiles.gui]
    enabled = true
    gui_listen_port = 6001
    gui_listen_address = "0.0.0.0"

[tiles.metric]
    prometheus_listen_address = "0.0.0.0"
    prometheus_listen_port = 7999

